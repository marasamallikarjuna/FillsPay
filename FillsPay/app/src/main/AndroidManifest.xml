<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mi.fillspay">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.flash"
        android:required="false" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="ANDROID.PERMISSION.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.FullScreen">
        <activity android:name=".view.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".view.RegistrationActivity"
            android:theme="@style/AppTheme.FullScreen">

        </activity>

        <activity android:name=".view.HomeActivity"
            android:theme="@style/AppTheme.FullScreen">

        </activity>

        <activity android:name=".view.UtilityActivity"
            android:theme="@style/AppTheme.FullScreen">

        </activity>

        <activity android:name=".view.MobileRechargeHomeActivity"
            android:theme="@style/AppTheme.FullScreen">

        </activity>

        <activity android:name=".view.SendMoneyHomeActivity"
            android:theme="@style/AppTheme.FullScreen"/>

        <activity android:name=".view.SettingsActivity"
            android:theme="@style/AppTheme.FullScreen"/>

        <activity android:name=".view.ProfileActivity"
            android:theme="@style/AppTheme.FullScreen"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>